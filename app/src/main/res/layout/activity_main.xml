<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ExtraText">
    <!-- Barre d'outils smartchecking -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/sign_title_string"
            app:menu="@menu/menu_select" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_search_view"
        app:iconifiedByDefault="false"
        android:layout_below="@+id/toolbar_box"
        app:queryHint="@string/search_string"
        android:elevation="2dp" />
    <!--    Recyclage view-->
    <!-- Filter -->
    <ImageView
        android:id="@+id/search_filter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/toolbar_box"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_filter" />
    // Recycle view
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bloc_icon"
        android:layout_below="@+id/search"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/list_item" />
    // No data
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_empty"
        android:text="@string/nodata"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:gravity="center"
        android:visibility="gone"
        />
    // bouton flotant
    <LinearLayout
        android:id="@+id/bloc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bloc_icon_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/T10">

        <ImageButton
            android:id="@+id/button_material_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_home"
            android:text="" />

        <ImageButton
            android:id="@+id/button_awesome_address_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/baseline_add_card_24"
            android:text="" />

        <ImageButton
            android:id="@+id/button_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/baseline_camera"
            android:text="" />

        <ImageButton
            android:id="@+id/button_material_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/baseline_insert_emoticon"
            android:text="" />
    </LinearLayout>
</RelativeLayout>
